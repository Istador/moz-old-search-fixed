  <!-- URL Bar -->
  <setting
    type="bool"
    pref="extensions.blackpinguin.oldsearchfixed.urlbar"
    title="&urlbar.title;"
    desc="&urlbar.desc;"
  />
  <setting
    type="bool"
    pref="extensions.blackpinguin.oldsearchfixed.urlbar.donotsearch"
    title="&urlbar.donotsearch.title;"
    desc="&urlbar.donotsearch.desc;"
  />
</vbox>
