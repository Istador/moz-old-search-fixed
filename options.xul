<?xml version="1.0"?>

<!DOCTYPE vbox SYSTEM "chrome://old-search-fixed/locale/options.dtd">

<vbox xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <!-- Search Bar -->
  <setting
    type="bool"
    pref="extensions.blackpinguin.oldsearchfixed.searchbar"
    title="&searchbar.title;"
    desc="&searchbar.desc;"
  />
  <setting
    type="bool"
    pref="extensions.blackpinguin.oldsearchfixed.searchbar.donotsearch"
    title="&searchbar.donotsearch.title;"
    desc="&searchbar.donotsearch.desc;"
  />
  <setting
    type="bool"
    pref="extensions.blackpinguin.oldsearchfixed.searchbar.icon"
    title="&searchbar.icon.title;"
    desc="&searchbar.icon.desc;"
  />
